[Unit]
Description=Simple systemd service for progetto-sdcc application registry setup

[Service]
Type=simple
EnvironmentFile=/home/ec2-user/go/src/env
WorkingDirectory=/home/ec2-user/go/src
ExecStart=/bin/bash /home/ec2-user/go/src/progetto-sdcc/registry/run.sh

[Install]
WantedBy=multi-user.target

